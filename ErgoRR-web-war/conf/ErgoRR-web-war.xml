<?xml version="1.0" encoding="UTF-8"?>
<Context path="/ErgoRR-web-war" docBase="ErgoRR-web-war" debug="5" reloadable="true" crossContext="true">
    <Resource name="jdbc/ergorr"
        auth="Container"
        type="javax.sql.DataSource"
        factory="org.apache.tomcat.dbcp.dbcp.BasicDataSourceFactory"
        username="postgres"
        password="test"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql://localhost:5432/ergorr"
        maxWait="1000"
        removeAbandoned="true"
        maxActive="30"
        maxIdle="10"
        removeAbandonedTimeout="60"
        validationQuery="select id from extrinsicobject limit 1"
        logAbandoned="true"/>
</Context>
